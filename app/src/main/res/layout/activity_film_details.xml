<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:background="@mipmap/movie_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24">

            <ImageView
                android:id="@+id/detail_title_icon"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/com_icon_movie_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/detail_title_icon"
                android:text="电影详情"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/detail_prise"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:src="@mipmap/com_icon_collection_default" />
        </RelativeLayout>

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:text="铁血战士"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_20" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/details_simple_view"
            android:layout_width="@dimen/dp_259"
            android:layout_height="@dimen/dp_360"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_btn_detail"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/btn_details_shape"
                android:gravity="center"
                android:text="详情"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/detail_btn_prevue"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/btn_details_shape"
                android:gravity="center"
                android:text="预告片"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/detail_btn_still"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/btn_details_shape"
                android:gravity="center"
                android:text="剧照"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/detail_btn_review"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:background="@drawable/btn_details_shape"
                android:gravity="center"
                android:text="影评"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff" />
        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/details_bottom_shape">

        <ImageView
            android:id="@+id/details_return"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@mipmap/com_icon_return_default" />

        <TextView
            android:id="@+id/buy_ticket"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/ticket_shape"
            android:gravity="center"
            android:text="购票"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />


    </RelativeLayout>


</RelativeLayout>
