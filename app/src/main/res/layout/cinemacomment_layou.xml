<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simPle_cinema_comment"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            fresco:roundedCornerRadius="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_name_cinema_comment"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/simPle_cinema_comment"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="adasda"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_content_cinema_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdad"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/linear"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/text_date_cinema_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_content_cinema_comment"
        android:text="dsadasdasdasd"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/btn_praise_cinema"
        android:layout_width="@dimen/dp_16"
        android:layout_alignTop="@+id/text_date_cinema_comment"
        android:layout_height="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/text_praise_num"
        android:src="@mipmap/com_icon_praise_default"/>
    <TextView
        android:id="@+id/text_praise_num"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/btn_praise_cinema"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_height="wrap_content"
        android:text="111"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/btn_praise_cinema"/>

</RelativeLayout>
