<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="@dimen/dp_70"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="true"
    app:cardMaxElevation="@dimen/dp_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_name_movieandfilm"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_name_movieandfilm"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_time_movieandfilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:40"
                android:textColor="#333333"
                android:textSize="@dimen/sp_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center_vertical"
                android:text="——"/>
            <TextView
                android:id="@+id/text_time1_movieandfilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:46"
                android:layout_marginRight="@dimen/dp_0_5"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_alignBottom="@+id/text_price_movieandfilm"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:id="@+id/text_price_movieandfilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36."
                android:textColor="@color/colorPeople"
                android:layout_toRightOf="@+id/text_money"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="@dimen/sp_36"
                />
            <TextView
                android:id="@+id/text_price1_movieandfilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_price_movieandfilm"
                android:text="9"
                android:textColor="@color/colorPeople"
                android:layout_alignBottom="@+id/text_price_movieandfilm"
                android:layout_marginBottom="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/text_price1_movieandfilm"
                android:src="@mipmap/com_icon_next_default"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
