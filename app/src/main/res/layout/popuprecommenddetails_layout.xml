<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_120"
    android:orientation="vertical"
    android:background="@drawable/shape_popup_recommend"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_details_pop"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_64"
                android:text="详情"
                android:textSize="@dimen/sp_16"/>
            <View
                android:id="@+id/view_details_pop"
                android:layout_width="@dimen/dp_40"
                android:background="@drawable/top_btn_shape"
                android:layout_below="@+id/text_details_pop"
                android:layout_marginLeft="@dimen/dp_64"
                android:layout_height="2dp" />
        <TextView
            android:id="@+id/text_comment_pop"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_toRightOf="@+id/text_details_pop"
            android:layout_marginLeft="@dimen/dp_115"
            android:layout_marginBottom="@dimen/dp_6"
            android:textSize="@dimen/sp_16"/>
        <View
            android:visibility="invisible"
            android:id="@+id/view_comment_pop"
            android:layout_width="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/top_btn_shape"
            android:layout_below="@+id/text_comment_pop"
            android:layout_marginLeft="@dimen/dp_219"

            android:layout_height="2dp" />
        <ImageView
            android:id="@+id/img_down"
            android:layout_width="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_down_default"/>
    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/text_error_comment"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_400"
        android:textSize="@dimen/dp_50"
        android:layout_gravity="center"
        android:text="暂无评论"/>
    <LinearLayout
        android:id="@+id/linear_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_height="@dimen/dp_400">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/cinemadetail_icon_location_default"/>
            <TextView
                android:id="@+id/text_address_details"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="阿达"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/cinemadetail_icon_phone_default"/>
            <TextView
                android:id="@+id/text_iphone_details"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="dsadasdasd"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/cinemadetail_icon_route_default"/>
            <TextView
                android:id="@+id/text_route_details"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="乘车路线"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_line_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="dsadasdasdasd"/>
    </LinearLayout>

</LinearLayout>
