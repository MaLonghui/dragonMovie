<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_120"
    android:orientation="vertical"
    android:background="@drawable/shape_popup_recommend"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_details_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_64"
            android:text="详情"
            android:textSize="@dimen/sp_16"/>
        <TextView
            android:id="@+id/text_comment_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_toRightOf="@+id/text_details_pop"
            android:layout_marginLeft="@dimen/dp_115"
            android:textSize="@dimen/sp_16"/>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_down_default"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"></LinearLayout>
</LinearLayout>
