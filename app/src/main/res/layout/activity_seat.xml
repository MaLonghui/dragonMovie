<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/seat_linea"
        android:layout_width="match_parent"
        android:background="@mipmap/banner_back"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/seat_text"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_13"
            android:textColor="#ffffff"
            android:text="12:00"
            android:background="@drawable/seat_text_shape"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_26" />
            <ImageView
                android:layout_below="@id/seat_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_70"
                android:background="@mipmap/rectangle"
                android:layout_width="@dimen/dp_172"
                android:layout_height="@dimen/dp_20" />

    </RelativeLayout>

    <com.bw.movie.seat.SeatTable
      android:layout_marginTop="@dimen/dp_200"
        android:id="@+id/seatView"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
