<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_24"
    android:fitsSystemWindows="true"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_height="wrap_content">

   <android.support.v7.widget.CardView
       android:id="@+id/cardView"
       android:layout_width="match_parent"
       app:cardPreventCornerOverlap="true"
       app:cardElevation="@dimen/dp_4"
       app:cardCornerRadius="@dimen/dp_10"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/linear_layout_update_info"
           android:layout_width="match_parent"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_marginRight="@dimen/dp_24"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_gravity="center_horizontal"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_50"
               android:gravity="center"
               android:textSize="@dimen/sp_18"
               android:text="修改信息"/>
           <EditText
               android:id="@+id/edit_nick_update"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_18"
               android:textColor="#fff"
               android:layout_marginBottom="@dimen/dp_20"
               android:background="@drawable/btn_shape_login"
               android:hint="请输入新的昵称"/>
           <EditText
               android:id="@+id/edit_sex_update"
               android:layout_width="match_parent"
               android:layout_marginBottom="@dimen/dp_20"
               android:layout_height="wrap_content"
               android:textColor="#fff"
               android:background="@drawable/btn_shape_login"
               android:textSize="@dimen/sp_18"
               android:hint="请输入新的性别"/>
           <EditText
               android:id="@+id/edit_email_update"
               android:layout_width="match_parent"
               android:textSize="@dimen/sp_18"
               android:textColor="#fff"
               android:layout_marginBottom="@dimen/dp_20"
               android:background="@drawable/btn_shape_login"
               android:layout_height="wrap_content"
               android:hint="请输入新的emainl"/>
       </LinearLayout>
   </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_update_info"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/shape_btn"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cardView"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:text="修改"/>
</RelativeLayout>
