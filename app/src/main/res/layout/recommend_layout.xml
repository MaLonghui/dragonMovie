<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_312"
    android:layout_height="@dimen/dp_100"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center_horizontal"
    app:cardMaxElevation="@dimen/dp_4"
    app:cardElevation="@dimen/dp_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simPle_recommend"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/sp_20" />

        <TextView
            android:id="@+id/text_name_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/simPle_recommend"
            android:singleLine="true"
            android:text="adsf"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/text_address_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name_recommend"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toLeftOf="@id/cinema_prise"
            android:layout_toRightOf="@+id/simPle_recommend"
            android:maxLines="2"
            android:text="dasdadas"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/text_km_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toRightOf="@+id/simPle_recommend"
            android:text="12"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/cinema_prise"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/com_icon_collection_default" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
