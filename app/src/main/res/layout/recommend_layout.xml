<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simPle_recommend"
            android:layout_width="@dimen/dp_70"
            android:layout_marginRight="@dimen/sp_20"
            android:layout_height="@dimen/dp_70" />
        <TextView
            android:id="@+id/text_name_recommend"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_10"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/simPle_recommend"
            android:layout_alignTop="@+id/simPle_recommend"/>
        <TextView
            android:id="@+id/text_address_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_9"
            android:layout_toRightOf="@+id/simPle_recommend"
            android:text="dasdadas"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/text_name_recommend"/>
        <TextView
            android:id="@+id/text_km_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_9"
            android:layout_toRightOf="@+id/simPle_recommend"
            android:layout_alignBottom="@+id/simPle_recommend"/>
    </RelativeLayout>
    
</android.support.v7.widget.CardView>
